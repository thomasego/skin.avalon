<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">52</defaultcontrol>
	<allowoverlay>yes</allowoverlay>  	
	<controls>      

		<!--Global Background-->
		<include>GlobalBackground</include>		

		<!--Login Screen-->	      
		<control type="group">
			<animation effect="fade" time="450">WindowOpen</animation>		
			<animation effect="fade" time="450">WindowClose</animation>

			<!-- List -->
			<control type="list" id="52">
				<posx>635</posx>
				<posy>360</posy>
				<width>650</width>
				<height>360</height>
				<onleft/>
				<onright>noop</onright>
				<onup>52</onup>
				<ondown>52</ondown>
				<pagecontrol/>
				<scrolltime tween="cubic" easing="out">500</scrolltime>
				<movement>1</movement>
				<itemlayout height="120">					
					<control type="label">
						<posx>140</posx>
						<posy>22</posy>
						<width>490</width>
						<height>40</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Light36</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>77white</textcolor>
						<scroll>false</scroll>
					</control>
					<control type="label">
						<posx>140</posx>
						<posy>61</posy>
						<width>490</width>
						<height>40</height>
						<label>$INFO[ListItem.Label2]</label>
						<font>Light30</font>
						<align>left</align>
						<aligny>center</aligny>
						<textcolor>55FFFFFF</textcolor>
						<scroll>false</scroll>
					</control>
				</itemlayout>
				<focusedlayout height="120">
					<control type="image">
						<posx>10</posx>
						<posy>10</posy>
						<width>100</width>
						<height>100</height>
						<texture background="true" fallback="common/profil/avatar.png">$INFO[Listitem.Icon]</texture>
						<animation effect="slide" start="0,120" end="0,0" time="300" reversible="false" tween="back" easing="out" condition="Container(52).OnPrevious">Focus</animation>
						<animation effect="slide" start="0,-120" end="0,0" time="300" reversible="false" tween="back" easing="out" condition="Container(52).OnNext">Focus</animation>
					</control>
					<control type="group">
						<animation type="Focus" condition="Container(52).OnNext | Container(52).OnPrevious" reversible="false">
							<effect type="fade" start="50" end="100" time="300" tween="sine" easing="inout" />
						</animation>
						<animation effect="fade" start="100" end="50" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(52)">Conditional</animation>
						<control type="label">
							<posx>140</posx>
							<posy>22</posy>
							<width>490</width>
							<height>40</height>
							<textcolor>eewhite</textcolor>
							<label>[B]$INFO[ListItem.Label][/B]</label>
							<font>Light36</font>
							<align>left</align>
							<aligny>center</aligny>
						</control>
						<control type="label">
							<posx>140</posx>
							<posy>61</posy>
							<width>490</width>
							<height>40</height>
							<textcolor>ABFFFFFF</textcolor>
							<label>$INFO[ListItem.Label2]</label>
							<font>Light30</font>
							<align>left</align>
							<aligny>center</aligny>
							<scroll>false</scroll>
						</control>
					</control>
				</focusedlayout>
			</control>	

			<!--Logo & Plot-->
			<control type="image">	
				<posx>890</posx>
				<posy>800</posy>
				<width>140</width>
				<height>140</height>
				<texture>common/avalon_logo.png</texture>				
			</control>
			<control type="label">				
				<posx>0</posx>
				<posy>930</posy>
				<width>1920</width>
				<height>80</height>			
				<font>Light50</font>
				<align>center</align>					
				<textcolor>mainblue</textcolor>
				<label>[B]Avalon[/B]</label>			
			</control>
			<control type="label">				
				<posx>0</posx>
				<posy>985</posy>
				<width>1920</width>
				<height>50</height>			
				<font>Light30</font>
				<align>center</align>					
				<textcolor>mainblue</textcolor>
				<label>for Kodi</label>			
			</control>

		</control>       

	</controls>
</window>